<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kp.mycommunicator.SearchActivity">


    <TextView
        android:text="Wyszukiwanie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/textView4"
        android:id="@+id/LinearLayou3"

        >

    <EditText
        android:layout_width="220dp"
        android:layout_height="fill_parent"


        android:hint="Podaj nazwÄ™ uzytkownika"
        android:id="@+id/editText7"

        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:paddingLeft="10dip"
        />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:src="@drawable/loupe"
            android:id="@+id/buttonSearch"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:background="#03c7d8"
            />
    </LinearLayout>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/listView3"
        android:layout_below="@+id/LinearLayou3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        />


</RelativeLayout>
