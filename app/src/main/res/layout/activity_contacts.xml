<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#A9F5A9"
    tools:context="com.example.kp.mycommunicator.ContactsActivity">

    <TextView android:text="LIsta kontaktów" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listaKontaktów"
        android:textSize="15dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:id="@+id/listView"
        android:layout_below="@+id/listaKontaktów"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffffff"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Rozmowa"
        android:id="@+id/button2"
        android:layout_below="@+id/listView"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#298A08"
       />

</RelativeLayout>
